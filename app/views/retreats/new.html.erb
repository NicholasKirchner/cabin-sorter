<%= form_for @retreat, url: {action: "create"} do |f| %>
  <%= f.label :description, "Description" %>
  <%= f.text_field :description %>
  <br>

  <%= f.label :cabin_capacity, "Cabin Capacity" %>
  <%= f.text_field :cabin_capacity %>
  <br>

  <%= f.label :number_male_students, "Number of male students" %>
  <%= f.text_field :number_male_students %>
  <br>

  <%= f.label :number_female_students, "Number of female students" %>
  <%= f.text_field :number_female_students %>
  <br>

  <%= f.label :number_male_chaperones, "Number of male chaperones" %>
  <%= f.text_area :number_male_chaperones %>
  <br>

  <%= f.label :number_female_chaperones, "Number of female chaperones" %>
  <%= f.text_area :number_female_chaperones %>

  <%= f.submit "Continue", class: "btn btn-large btn-primary" %>
<% end %>
